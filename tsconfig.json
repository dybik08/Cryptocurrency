{
  "compilerOptions": {
    "module": "amd",
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015",
      "es2016",
      "es2018"
    ],
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "target": "es6",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*"
  ]
}